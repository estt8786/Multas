@model IEnumerable<Multas.Models.Agentes>

@{
    ViewBag.Title = "Agentes";
}

<h2>Listagem de Agentes</h2>

<p> 
    <!--html helpers => metodo que sera executado no controller-->
    @Html.ActionLink("Novo Agente", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <!-- se termina em ???????for, esta asssociado ao modelo, mostra o atributo-->
            <!-- mostrar o NOME do conteudo do atributo-->
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            <!-- palavra model- objeto da classe Agente mostra, o nome do atributo pode ser qualquer nome dos 2 lados-->
            @Html.DisplayNameFor(model => model.Esquadra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fotografia)
        </th>
        <th></th>
    </tr>

@foreach (var agente in Model) {
    <tr>
        <td>
            <!-- mostrar o conteudo do atributo-->
            @Html.DisplayFor(modelItem => agente.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => agente.Esquadra)
        </td>
        <td>
            @*
            mostra o conteúdo do campo Fotografia - apresenta a imagem da foto
            queremos mostrar a imagem do Agente

            @Html.DisplayFor(modelItem => agente.Fotografia)
            *@

            <img src="~/Imagens/@agente.Fotografia" 
                 alt="imagem do agente @agente"
                 title="@agente.Nome"
                 width="50" />
                
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=agente.ID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=agente.ID }) |
            @Html.ActionLink("Apagar", "Delete", new { id=agente.ID })
        </td>
    </tr>
}

</table>
